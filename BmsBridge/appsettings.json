{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": 1,
    "WriteTo": [
      {
        "Name": "Console",
        "Args": null
      },
      {
        "Name": "File",
        "Args": {
          "Path": "logs/app.log",
          "RollingInterval": 3,
          "FileSizeLimitBytes": 1000000,
          "RetainedFileCountLimit": 7,
          "Formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "RollOnFileSizeLimit": false
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "BmsBridge"
    }
  },
  "AzureSettings": {
    "tenant_id": "aaaaaaaa-bbbb-cccc-dddd-eeeeeeeeeeee",
    "client_id": "aaaaaaaa-bbbb-cccc-dddd-eeeeeeeeeeee",
    "device_id": "my-device-name",
    "scope_id": "XXXXXXXXXXX",
    "secret_name": "my-vault-secret",
    "vault_name": "my-vault",
    "certificate_subject": "my-certificate-subject",
    "sas_ttl_days": 90
  },
  "GeneralSettings": {
    "http_request_delay_seconds": 5,
    "http_timeout_delay_seconds": 15,
    "http_retry_count": 3,
    "soft_reset_interval_hours": 12,
    "e2_max_buffer_length": 100,
    "log_file_max_size_mb": 10,
    "log_files_max_number": 3
  },
  "NetworkSettings": {
    "bms_devices": []
  }
}